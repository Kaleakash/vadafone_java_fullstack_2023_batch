<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

<bean class="com.pojo.Employee" id="emp1" scope="singleton"></bean>

<bean class="com.pojo.Employee" id="emp2" scope="prototype"></bean>

<bean class="com.pojo.Employee" id="emp3">
	<constructor-arg value="100"></constructor-arg>
	<constructor-arg value="Ravi"></constructor-arg>	
	<constructor-arg value="12000"></constructor-arg>
	
</bean>

<bean class="com.pojo.Employee" id="emp4">
	<property name="id" value="101"></property>
	<property name="name" value="Ajay"></property>
	<property name="salary" value="14000"></property>
</bean>
