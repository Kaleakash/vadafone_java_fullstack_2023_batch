<bean class="com.pojo.Employee" id="emp6">
	<property name="name" value="Lex"></property>
	<property name="id" value="102"></property>
</bean>

<bean class="com.pojo.Address" id="add1">
	<property name="city" value="Bangalore"></property>
	<property name="state" value="Kar"></property>
</bean>

<bean class="com.pojo.Address" id="add">
	<property name="city" value="Mumbai"></property>
	<property name="state" value="Mh"></property>
</bean>
<bean class="com.pojo.Employee" id="emp7" autowire="byName">
	<property name="id" value="103"></property>
	<property name="name" value="Neena"></property>
	<property name="salary" value="34000"></property>
<!-- 	<property name="add" ref="add1"></property>  -->
</bean>



</beans>

